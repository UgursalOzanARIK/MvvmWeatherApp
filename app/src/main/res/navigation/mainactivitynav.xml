<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivitynav"
    app:startDestination="@id/weatherForecastFragment">

    <fragment
        android:id="@+id/weatherForecastFragment"
        android:name="com.ozanarik.mvvmweatherapp.ui.fragments.WeatherForecastFragment"
        android:label="fragment_weather_forecast"
        tools:layout="@layout/fragment_weather_forecast" >
        <action
            android:id="@+id/action_weatherForecastFragment_to_weeklyWeatherFragment"
            app:destination="@id/weeklyWeatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ozanarik.mvvmweatherapp.ui.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_weatherForecastFragment"
            app:destination="@id/weatherForecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/weeklyWeatherFragment"
        android:name="com.ozanarik.mvvmweatherapp.ui.fragments.WeeklyWeatherFragment"
        android:label="fragment_weekly_weather"
        tools:layout="@layout/fragment_weekly_weather" >
        <argument
            android:name="cityName"
            app:argType="string" />
        <action
            android:id="@+id/action_weeklyWeatherFragment_to_weatherForecastFragment"
            app:destination="@id/weatherForecastFragment" />
    </fragment>
</navigation>